<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <!-- 为 Quote 地址添加扩展属性 -->
    <extension_attributes for="Magento\Quote\Api\Data\AddressInterface">
        <attribute code="brimar_residential" type="boolean"/>
        <attribute code="brimar_scheduled" type="boolean"/>
    </extension_attributes>

    <!-- 为 Order 添加扩展属性（可选） -->
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="brimar_residential" type="boolean"/>
        <attribute code="brimar_scheduled" type="boolean"/>
        <attribute code="brimar_shipping_fee" type="float"/>
    </extension_attributes>

    <!-- 为 Quote 添加扩展属性（可选） -->
    <extension_attributes for="Magento\Quote\Api\Data\CartInterface">
        <attribute code="brimar_residential" type="boolean"/>
        <attribute code="brimar_scheduled" type="boolean"/>
        <attribute code="brimar_shipping_fee" type="float"/>
    </extension_attributes>
    
    <!-- 运费估算地址 -->
    <extension_attributes for="Magento\Quote\Api\Data\EstimateAddressInterface">
        <attribute code="brimar_residential" type="boolean"/>
        <attribute code="brimar_scheduled" type="boolean"/>
    </extension_attributes>
</config>