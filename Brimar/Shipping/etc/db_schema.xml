<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <!-- sales_order -->
    <table name="sales_order" resource="default" engine="innodb">
        <column xsi:type="boolean" name="brimar_residential" nullable="true" comment="Residential Delivery Flag"/>
        <column xsi:type="boolean" name="brimar_scheduled" nullable="true" comment="Scheduled Delivery Flag"/>
        <column xsi:type="decimal" name="brimar_shipping_fee" scale="4" precision="12" nullable="true" comment="Additional Fees"/>
    </table>

    <!-- quote -->
    <table name="quote" resource="default" engine="innodb">
        <column xsi:type="boolean" name="brimar_residential" nullable="true" comment="Residential Delivery Flag"/>
        <column xsi:type="boolean" name="brimar_scheduled" nullable="true" comment="Scheduled Delivery Flag"/>
        <column xsi:type="decimal" name="brimar_shipping_fee" scale="4" precision="12" nullable="true" comment="Additional Fees"/>
    </table>

    <!-- quote_address -->
    <table name="quote_address" resource="default" engine="innodb">
        <column xsi:type="boolean" name="brimar_residential" nullable="true" comment="Residential Delivery Flag"/>
        <column xsi:type="boolean" name="brimar_scheduled" nullable="true" comment="Scheduled Delivery Flag"/>
        <column xsi:type="decimal" name="brimar_shipping_fee" scale="4" precision="12" nullable="true" comment="Additional Fees"/>
    </table>
</schema>